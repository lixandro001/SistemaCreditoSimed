
@{
    ViewBag.Title = "Gestión Creditos Clientes";


    string CFecha = string.Format("{0:dd/MM/yyyy}", DateTime.Today.AddDays(-7));
    string FFecha = string.Format("{0:dd/MM/yyyy}", DateTime.Today);
}


<!-- Default box -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Gestión de Creditos</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>


    <div class="card-body">
        <form id="frmGuardarUsuario" class="form-horizontal" role="form" method="post" action="">

            <div class="row">
                <div class="col-sm-12">
                    <div class="col-auto bg-dark p-1 text-center">
                        <h6>Nuevo Usuario</h6>
                    </div>
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="" class="col-sm-3 col-form-label">*Login</label>
                        <div class="col-sm-9">
                            <input id="txtlogin" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="" class="col-sm-3 col-form-label">*Password</label>
                        <div class="col-sm-9">
                            <input id="txtpassword" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="" class="col-sm-3 col-form-label">*Nombre Completo</label>
                        <div class="col-sm-9">
                            <input id="txtnombrecompleto" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="" class="col-sm-3 col-form-label">*Documento Identidad</label>
                        <div class="col-sm-9">
                            <input id="txtdocumentoidentidad" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="inputNombreRazon" class="col-sm-3 col-form-label">*Email</label>
                        <div class="col-sm-9">
                            <input id="txtemail" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group row">
                        <label for="" class="col-sm-3 col-form-label">*Tipo Perfil</label>
                        <div class="col-sm-9">
                            <select id="txtperfil" type="text" class="form-control">
                                <option value="0">Seleccionar Perfil</option>
                                <option value="1">Administrador</option>
                                <option value="2">Asesor Comercial</option>
                                <option value="3">Analista de Credito y Cobranza</option>
                                <option value="4">Gerente de Venta o Unidad de Negocio</option>
                                <option value="5">Gerente Administracion de Finanza</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button id="btnRefresh" type="button" class="btn btn-primary">Limpiar</button>
                <button id="btnGuardarFormulario" type="button" class="btn btn-success">Guardar</button>

            </div>

        </form>
        <!-- /.card-body -->
    </div>
</div>
<!-- /.card -->

@section styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="@Url.Content("~/plugins/datatables-bs4/css/dataTables.bootstrap4.css")">
    <link rel="stylesheet" href="@Url.Content("~/plugins/dateticker/datepicker3.css")">

}

@section scripts{
    <!-- DataTables -->
    <script src="@Url.Content("~/plugins/datatables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/plugins/datatables-bs4/js/dataTables.bootstrap4.js")"></script>
    <script src="@Url.Content("~/plugins/dateticker/bootstrap-datepicker.js")"></script>
    <script src="@Url.Content("~/js/NuevoUsuario.js")"></script>
     
}
