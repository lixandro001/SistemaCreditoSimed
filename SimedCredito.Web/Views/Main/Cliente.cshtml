@{
    ViewBag.Title = "Gestión de Clientes";
    string CFecha = string.Format("{0:dd/MM/yyyy}", DateTime.Today);
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Bandeja de Cientes</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-4 col-form-label">Desde</label>
                    <div class="col-sm-8">
                        <input type="hidden" id="hdnStartDate" class="form-control" name="date1" />
                        <div class="input-group date">
                            <input type="text" class="form-control pull-right" id="txtStartDate" value="@CFecha">
                            <div class="input-group-append" data-target="#txtStartDate" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group row">
                    <label for="inputPassword3" class="col-sm-4 col-form-label">Hasta</label>
                    <div class="col-sm-8">
                        <input type="hidden" id="hdnEndDate" class="form-control" name="date2" />
                        <div class="input-group date">
                            <input type="text" class="form-control pull-right" id="txtEndDate" value="@CFecha">
                            <div class="input-group-append" data-target="#txtStartDate" data-toggle="datetimepicker">
                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @*<div class="col-sm-3">
                <div class="form-group row">
                    <label for="chkApplyDates" class="col-sm-12 col-form-label">
                        <input type="checkbox" name="chkApplyDates" id="chkApplyDates" checked /> Aplicar Fechas
                    </label>
                </div>
            </div>*@
        </div>
    </div>
    <div class="card-footer">
        <button type="button" id="btnConsultar" class="btn btn-primary">Consultar</button>
        <button id="btnShowPoppup" type="button" class="btn btn-success">Enviar Correo</button>
    </div>
    <div class="card-body">
        <table id="tabTray" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Seleccionar</th>
                    <th>Acciones</th>
                    <th>Archivos</th>
                    <th>Neco</th>
                    <th>Tienda</th>
                    <th>Número Boleta</th>
                    <th>Numero Boleta Sunat</th>
                    <th>Número Pedido</th>
                    <th>Fecha Surtido</th>
                    <th>DNI</th>
                    <th>Monto</th>
                    <th>ISC</th>
                    <th>Nombre Cliente</th>
                    <th>Razon Social</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
  

@section styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="@Url.Content("~/plugins/datatables-bs4/css/dataTables.bootstrap4.css")">
    <link rel="stylesheet" href="@Url.Content("~/plugins/dateticker/datepicker3.css")">

}

@section scripts{
    <!-- DataTables -->
    <script src="@Url.Content("~/plugins/datatables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/plugins/datatables-bs4/js/dataTables.bootstrap4.js")"></script>
    <script src="@Url.Content("~/plugins/dateticker/bootstrap-datepicker.js")"></script>
    <script src="@Url.Content("~/js/tray.js")"></script>
}
